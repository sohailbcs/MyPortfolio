        /* General icon container and text styling */
        .icon-container {
            display: flex;
            justify-content: center;
        }

        .icon-item {
            position: relative;
            margin: 0 10px;
        }

            .icon-item img {
                transition: all 0.3s ease;
            }

        .icon-text {
            position: absolute;
            bottom: 120px;
            left: 50%;
            transform: translateX(-50%);
            white-space: nowrap;
            font-size: 14px;
            color: #000;
            opacity: 0;
            transition: opacity 0.3s ease;
            background: linear-gradient(to top left, #f97254 30%, #e1386c 70%);
            padding: 4px 10px;
            border-radius:20px;
        }

        .icon-text2 {
            position: absolute;
            bottom: 70px;
            left: 50%;
            transform: translateX(-50%);
            white-space: nowrap;
            font-size: 14px;
            color: #000;
