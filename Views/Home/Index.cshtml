            background: linear-gradient(to top left, #f97254 30%, #e1386c 70%);
            padding: 4px 10px;
            border-radius: 20px;
        }
        /* Show the text when hovering over the icon */
        .icon-item:hover .icon-text2 {
            opacity: 1;
        }

        /* Show the text when hovering over the icon */
        .icon-item:hover .icon-text {
            opacity: 1;
        }

        /* Optional: Scale the image on hover */
        .icon-item:hover img {
            transform: scale(1.1);
        }

        .caption:before, .caption:after {

        
            background-repeat: no-repeat;
            background-size: contain;
            content: "";
            background-size: contain;
            width: 50px;
            height: 50px;
            display: inline-block;
            color: wheat;
            background-image: url(https://aamirakbar.com/quote-white.0024a3759ac0fb1d.svg);
